<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardUseCompatPadding="true"
android:background="@color/white"
    android:backgroundTint="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#66004182">

    <androidx.constraintlayout.widget.ConstraintLayout
android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <ImageButton
            android:id="@+id/love_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/love_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="1"
         tools:text="Nike Air Jordon"
            android:textColor="@color/Main_text_color"
            android:textSize="@dimen/_10ssp"
          app:layout_constraintTop_toBottomOf="@+id/product_image"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/product_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/poopins_light"
            tools:text="Nike shoes flexible for wo.."
            android:textColor="@color/Main_text_color"
            android:textSize="@dimen/_12ssp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_name" />


        <TextView
            android:id="@+id/prod_discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
           tools:text="EGP 1,200"
            android:textColor="@color/Main_text_color"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_details" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
           app:layout_constraintTop_toTopOf="@id/prod_real_price"
            app:layout_constraintBottom_toBottomOf="@+id/prod_real_price"
            app:layout_constraintEnd_toEndOf="@+id/prod_real_price"
           android:background="#6606004F"
            app:layout_constraintStart_toStartOf="@id/prod_real_price" />
        <TextView
            android:id="@+id/prod_real_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            tools:text="EGP 1,200"
            android:textColor="#6606004F"
            android:textSize="@dimen/_8ssp"
          android:elegantTextHeight="true"
            app:layout_constraintStart_toEndOf="@id/prod_discount_price"
            app:layout_constraintTop_toBottomOf="@id/product_details"

            />

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            app:drawableEndCompat="@drawable/star_raiting_icon"
            android:drawablePadding="@dimen/_5sdp"
            tools:text="review(4.6)"
            android:textColor="@color/Main_text_color"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/prod_discount_price" />
       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintEnd_toEndOf="parent"
           android:src="@drawable/add_icon"
           app:layout_constraintBottom_toBottomOf="parent"
      android:backgroundTint="@color/white"

           android:layout_marginBottom="@dimen/_5sdp"
           />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>